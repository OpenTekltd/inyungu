<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
    <class name="com.store.entity.Product" catalog="inyungu_store" table="products">
        <id name="productID" type="java.lang.Integer" column="productId">
            <generator class="identity"/>
        </id>
        <property name="productName" type="string" column="productName"/>
        <property name="productQuantity" type="java.lang.Integer" column="productQuantity"/>
        <property name="bankslipID" type="string" column="bankslipId"/>
        <property name="creationDate" type="java.util.Date" column="date"/>
        <property name="productAmount" type="java.lang.Double" column="productAmount"/>
    </class>
    
     <class name="com.store.entity.Stock" catalog="inyungu_store" table="stock">
        <id name="stockID" type="java.lang.Integer" column="stockId">
            <generator class="identity"/>
        </id>
        <property name="price" type="java.lang.Double" column="stockPrice"/>
        <property name="quantinty" type="java.lang.Integer" column="stockQuantity"/>         
        <property name="creationDate" type="java.util.Date" column="date"/>       
    </class>
    
     <class name="com.store.entity.User" catalog="inyungu_store" table="users">
        <id name="userID" type="java.lang.Integer" column="userId">
            <generator class="identity"/>
        </id>
        <property name="firstName" type="string" column="userFname"/>  
        <property name="lastName" type="string" column="userLname"/>  
        <property name="phoneNumber" type="string" column="userPhonenumber"/>  
        <property name="email" type="string" column="userEmail"/> 
        <property name="creationDate" type="java.util.Date" column="userCreationdate"/>  
        <property name="username" type="string" column="userName"/>  
        <property name="password" type="string" column="userPassword"/>  
        <property name="userRole" type="string" column="userRole"/>
    </class>
</hibernate-mapping>
